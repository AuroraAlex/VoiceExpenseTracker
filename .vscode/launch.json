{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Voice Expense Tracker (Web, no CORS)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--web-port=8080",
                "--web-renderer=html",
                "--web-browser-flag",
                "--disable-web-security"
            ]
        },
        {
            "name": "Voice Expense Tracker (macOS)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "macos"
        }
    ]
}